<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/love_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.CalculateFragment">

    <TextView
        android:textColor="#6D64FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love Calculator"
        android:textSize="40sp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="28dp"
        android:textStyle="bold"/>

    <TextView
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textSize="28sp"
        android:layout_marginTop="290dp"
        android:layout_marginStart="28dp"
        android:textColor="@color/black"/>


    <TextView
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Name"
        android:textSize="28sp"
        android:layout_marginTop="380dp"
        android:layout_marginStart="28dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="You"
        android:layout_marginTop="325dp"
        android:textSize="20sp"
        android:layout_marginStart="40dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"/>

    <EditText
        android:id="@+id/et_second_name"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="Me"
        android:layout_marginTop="420dp"
        android:textSize="20sp"
        android:layout_marginStart="40dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"/>
    
    <com.google.android.material.button.MaterialButton
        android:textColor="@color/white"
        android:id="@+id/btn_calculate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_marginTop="520dp"
        android:layout_gravity="center_horizontal"
        app:cornerRadius="40px"
        android:backgroundTint="#6D64FF"
        android:textSize="24sp"/>

</FrameLayout>